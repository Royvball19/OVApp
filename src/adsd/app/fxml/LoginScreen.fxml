<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="400.0" maxWidth="265.0" minHeight="400.0" minWidth="265.0" prefHeight="400.0" prefWidth="265.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adsd.app.LoginScreenController">
    <children>
        <ToolBar fx:id="myToolBar" layoutX="29.0" layoutY="28.0" minHeight="53.0" prefHeight="60.0" prefWidth="207.0" styleClass="toolbar" stylesheets="@../style.css">
            <items>
                <Button id="homeScreenButton" mnemonicParsing="false" onAction="#showHomeScreen" prefHeight="28.0" prefWidth="31.0" stylesheets="@../style.css" />
                <Button id="myProfileButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" stylesheets="@../style.css" />
                <Button id="myFavoriteButton" fx:id="myFavoriteButton" mnemonicParsing="false" onAction="#showMyFavoriteTrips" prefHeight="40.0" prefWidth="40.0" stylesheets="@../style.css" />
            <MenuButton id="myLangButton" fx:id="myLangButton" mnemonicParsing="false">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#changeLangNed" text="Nederlands" />
                <MenuItem mnemonicParsing="false" onAction="#changeLangEng" text="Engels" />
              </items>
            </MenuButton>
            </items>
        </ToolBar>
      <Button fx:id="showSelectedProfile" layoutX="108.0" layoutY="250.0" mnemonicParsing="false" onAction="#login" text="Login" />
      <TextField fx:id="userName" layoutX="52.0" layoutY="157.0" promptText="Gebruikersnaam" />
      <TextField fx:id="password" layoutX="52.0" layoutY="200.0" promptText="Wachtwoord" />
      <Hyperlink fx:id="noAccount" layoutX="85.0" layoutY="295.0" onAction="#toRegistration" text="Geen account?" />
      <Label fx:id="profileNotExist" layoutX="67.0" layoutY="116.0" prefHeight="17.0" prefWidth="130.0" />
    </children>
</AnchorPane>
